@model List<TeamViewModel>
@{
    ViewData["Title"] = "Timler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill"></i> Timler</h2>
    <a href="/teams/create" class="btn btn-success">
        <i class="bi bi-plus"></i> Yeni Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ad</th>
                        <th>Kod</th>
                        <th>Kapasite</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model)
                    {
                        <tr>
                            <td>@team.Name</td>
                            <td>@team.Code</td>
                            <td>@team.Capacity</td>
                            <td>
                                <a href="/teams/details/@team.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Detay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>