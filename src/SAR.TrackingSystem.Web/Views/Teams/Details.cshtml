@model TeamViewModel
@{
    ViewData["Title"] = "Tim Detayları";
}

<h2><i class="bi bi-people-fill"></i> Tim Detayları</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Kod:</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">Kapasite:</dt>
            <dd class="col-sm-9">@Model.Capacity</dd>
        </dl>

        <div class="d-flex gap-2">
            <a href="/teams" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>