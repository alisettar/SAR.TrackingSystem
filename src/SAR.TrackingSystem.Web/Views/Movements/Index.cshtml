@model PaginatedResponse<MovementViewModel>
@{
    ViewData["Title"] = "Hareketler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-arrow-left-right"></i> Hareketler</h2>
    <a href="/movements/create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Hareket Kaydı
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        @TempData["Success"]
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ekip Üyesi</th>
                        <th>Kaynak</th>
                        <th>Hedef</th>
                        <th>Zaman</th>
                        <th>Grup</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movement in Model.Items)
                    {
                        <tr>
                            <td><strong>@movement.VolunteerName</strong></td>
                            <td>
                                @if (movement.FromSectorName != null)
                                {
                                    <span class="badge bg-secondary">@movement.FromSectorName</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td><span class="badge bg-primary">@movement.ToSectorName</span></td>
                            <td>@movement.MovementTime.ToString("dd.MM HH:mm")</td>
                            <td>
                                @if (movement.IsGroupMovement)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-people"></i> Grup
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Tekil</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    @* İlk sayfa *@
                    @if (Model.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=1">İlk</a>
                        </li>
                    }
                    
                    @* Önceki sayfa *@
                    @if (Model.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.Page - 1)">‹</a>
                        </li>
                    }
                    
                    @* Sayfa numaraları (mevcut sayfanın çevresinde 5 sayfa) *@
                    @{
                        var startPage = Math.Max(1, Model.Page - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.Page + 2);
                    }
                    
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.Page ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    
                    @* Sonraki sayfa *@
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.Page + 1)">›</a>
                        </li>
                    }
                    
                    @* Son sayfa *@
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@Model.TotalPages">Son (@Model.TotalPages)</a>
                        </li>
                    }
                </ul>
                
                <div class="text-center mt-2">
                    <small class="text-muted">
                        Sayfa @Model.Page / @Model.TotalPages - 
                        Toplam @Model.TotalCount hareket
                    </small>
                </div>
            </nav>
        }
    </div>
</div>
