@model MovementCreateViewModel
@{
    ViewData["Title"] = "Hareket Kaydı";
}

<h2><i class="bi bi-arrow-left-right"></i> Hareket Kaydı</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Gönüllü</label>
                        <select asp-for="VolunteerId" class="form-select" required>
                            <option value="">Gönüllü seçiniz...</option>
                            @if (ViewBag.Volunteers != null)
                            {
                                @foreach (var volunteer in ((PaginatedResponse<VolunteerViewModel>)ViewBag.Volunteers).Items)
                                {
                                    <option value="@volunteer.Id">@volunteer.FullName (@volunteer.TcKimlik)</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Kaynak Sektör</label>
                        <select asp-for="FromSectorId" class="form-select">
                            <option value="">Seçiniz (ilk hareket için boş)</option>
                            @if (ViewBag.Sectors != null)
                            {
                                @foreach (var sector in (List<SectorViewModel>)ViewBag.Sectors)
                                {
                                    <option value="@sector.Id">@sector.Name (@sector.Code)</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Hedef Sektör</label>
                        <select asp-for="ToSectorId" class="form-select" required>
                            <option value="">Hedef sektör seçiniz...</option>
                            @if (ViewBag.Sectors != null)
                            {
                                @foreach (var sector in (List<SectorViewModel>)ViewBag.Sectors)
                                {
                                    <option value="@sector.Id">@sector.Name (@sector.Code)</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Hareket Tipi</label>
                        <select asp-for="Type" class="form-select" required>
                            <option value="0">İntikal (Entry)</option>
                            <option value="1">Transfer</option>
                            <option value="2">Çıkış (Exit)</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">Hareket Tipi</label>
                        <div class="form-check mt-2">
                            <input asp-for="IsGroupMovement" class="form-check-input" type="checkbox" 
                                   onchange="toggleGroupId(this)" />
                            <label class="form-check-label">
                                Grup Hareketi
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" id="groupIdRow" style="display: none;">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Grup ID</label>
                        <input asp-for="GroupId" class="form-control" type="text" placeholder="Grup ID'si giriniz" />
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Notlar</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="İsteğe bağlı notlar..."></textarea>
            </div>

            <div class="alert alert-info">
                <strong><i class="bi bi-info-circle"></i> Hareket Kuralları:</strong>
                <ul class="mb-0">
                    <li>İlk hareket mutlaka ALAN_DIŞI → BOO olmalıdır</li>
                    <li>Sektör geçişleri BOO üzerinden yapılmalıdır</li>
                    <li>Çıkış sadece BOO'dan yapılabilir</li>
                    <li>Grup hareketi seçildiğinde Grup ID zorunludur</li>
                </ul>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Hareket Kaydı Yap
                </button>
                <a href="/movements" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function toggleGroupId(checkbox) {
            const groupIdRow = document.getElementById('groupIdRow');
            const groupIdInput = document.querySelector('input[name="GroupId"]');
            
            if (checkbox.checked) {
                groupIdRow.style.display = 'block';
                groupIdInput.required = true;
            } else {
                groupIdRow.style.display = 'none';
                groupIdInput.required = false;
                groupIdInput.value = '';
            }
        }
    </script>
}
