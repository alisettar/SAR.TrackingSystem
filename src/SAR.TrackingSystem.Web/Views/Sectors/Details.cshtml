@model SectorViewModel
@{
    ViewData["Title"] = "Sektör Detayları";
}

<h2><i class="bi bi-grid"></i> Sektör Detayları</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Ad:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Kod:</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">Durum:</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Aktif</span>
                }
                else
                {
                    <span class="badge bg-secondary">Pasif</span>
                }
            </dd>
        </dl>

        <div class="d-flex gap-2">
            <a href="/sectors" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div>